{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "data": {
    "url": "data/world.geo.json",
    "format": {
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "name",
      "from": {
        "data": {
          "url": "data/FAOSTAT_data_8-15-2021.csv"
        },
        "key": "area",
        "fields": ["area"]
      }
    }
  ],
  "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "rate",
      "type": "quantitative"
    }
  }
}
